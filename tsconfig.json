{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true, // Enabled for legacy support if needed
    "useDefineForClassFields": true, // Changed to true for standard compliance
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true, // Required for bundler
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // "allowImportingTsExtensions": true, // Removed as it can cause issues in some setups, rely on bundler
    "noEmit": true,
    "strict": true, // Added for better type safety in the root project
    "esModuleInterop": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "node_modules",
    "AyurShield",
    "dist"
  ]
}